@model Usuario

<h1>ALERTA!</h1>
<h2>Tem certzeza que deseja Excluir o Usuário @Model.Nome (@Model.Login)?</h2>
<p>exclusão é irreversível</p>

<form action="ExcluirUsuario" method="post">
    <input type="hidden" name="id" value="@Model.id">

    <input name="decisao" type="submit" value="CANCELAR">
    <input name="decisao" type="submit" value="EXCLUIR" >

</form>